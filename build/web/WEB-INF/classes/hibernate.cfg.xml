<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.connection.driver_class">com.microsoft.sqlserver.jdbc.SQLServerDriver</property>
    <property name="hibernate.connection.url">jdbc:sqlserver://localhost:1433;databaseName=leasemanagmentsystem</property>
    <property name="hibernate.connection.username">sa</property>
    <property name="hibernate.connection.password">icreate</property>
    <mapping class="model.Login"></mapping>
    <mapping class="model.Registration"></mapping>
    <mapping class="model.Category"></mapping>
    <mapping class="model.Addproperty"></mapping>
    <mapping class="model.Feedback"></mapping>
    <mapping class="model.Buy"></mapping>
    <mapping class="model.Payment"></mapping>
  </session-factory>
  
</hibernate-configuration>
